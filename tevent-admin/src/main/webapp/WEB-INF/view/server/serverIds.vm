<script>
    //释放
    function deleteId(serverId) {

        showConfirmPopUp("确认","确定要删除ServerId '"+serverId+"' 吗？", function confirmCallback(formData){
            $.ajax({
                cache: true,
                type: "DELETE",
                url: "${ac.contextPath}/server/id/"+serverId,
                data: null,
                async: false,
                error: function (request) {
                    showErrorPopUp("操作超时！");
                },
                success: function (data) {
                    var result = data;
                    showPopUp(result.status, result.message);
                    if (result.status == 1) {
                        setTimeout(location.reload(), 2000);
                    }
                }
            });
        }, serverId);
    }
</script>