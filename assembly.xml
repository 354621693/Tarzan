<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <baseDirectory>tarzan</baseDirectory>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <includes>
                <include>bin/*</include>
                <include>conf/*</include>
                <include>doc/install/*</include>
            </includes>
        </fileSet>
    </fileSets>


    <moduleSets>
        <moduleSet>
            <includes>
                <include>com.tongbanjie.tarzan:tarzan-server</include>
                <include>com.tongbanjie.tarzan:tarzan-client</include>
                <include>com.tongbanjie.tarzan:tarzan-common</include>
                <include>com.tongbanjie.tarzan:tarzan-registry</include>
                <include>com.tongbanjie.tarzan:tarzan-rpc</include>
                <include>com.tongbanjie.tarzan:tarzan-store</include>
                <include>com.tongbanjie.tarzan:tarzan-cluster</include>
            </includes>
            <binaries>
                <outputDirectory>lib/</outputDirectory>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>lib/</outputDirectory>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>